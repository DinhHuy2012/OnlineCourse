    <!-- **************** MAIN CONTENT START **************** -->
    <main>

        @if (Session["USER_SESSION"] != null)
        {
            <div id="product-edit-@user.Id" class="modal fade bs-example-modal-xl-edit" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-xl">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 style="text-align:center" class="modal-title" id="myLargeModalLabel">Chọn ảnh đại diện </h5>
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-md-3">
                                </div>
                                <div class="col-md-6">
                                    @if (items != null)
                                    {
                                        <img src="@items.Avatar" style="width:400px;height:400px"/>

                                    }
                                </div>
                                <div class="col-md-3">
                                </div>
                            </div>


                            <div class="row">

                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="field-2" class="control-label">Ảnh đại diện</label><input type="text" class="form-control" id="e_image" hidden="hidden">
                                        <input type="text" class="form-control" id="e_image_@user.Id" value="@user.Avartar" placeholder="">
                                        &nbsp;<a class="xyzpopup" id="btnSelectImageEdit" href="#">Chọn ảnh khác</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary waves-effect" data-dismiss="modal">Thoát</button>
                            <a class="abclaice" data-listid="@user.Id" data-image="e_image_@user.Id">
                                <input type="submit" id="btnUpdateProduct" class="btn btn-info waves-effect waves-light" value="Cập nhật" />
                            </a>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div>

        }
        @RenderBody();


    </main>
