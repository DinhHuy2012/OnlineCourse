    <script>

        $('#btnSelectImage').on('click', function (e) {
            e.preventDefault();
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#m_image').val(url);
            };
            finder.popup();
        })
        $('.xyzpopup').on('click', function (e) {
            e.preventDefault();
            var finder = new CKFinder();
            finder.selectActionFunction = function (url) {
                $('#e_image').val(url);
            };
            finder.popup();
        })
    </script>

